@model IEnumerable<Team2LibraryProject_01.Models.Inventory>

    @{
        ViewBag.Title = "Inventory Index";
        string message = TempData["Success"] as string;
    }

    <h2>Inventory Index</h2>

    <body>
        <hr />

        @if (!String.IsNullOrEmpty(message))
        {
            <hr />
            <div class="message">
                <p style="color: darkorange">@message</p>
            </div>
            <hr />
        }

        <p>
            @Html.ActionLink("Create New Inventory Entry", "CreateInventoryItem") |
            @Html.ActionLink("Return to Admin Section", "Admin", "Home")
        </p>

        <table class="table">
            <tr>
                <th>
                    Item ID
                </th>
                <th>
                    Item Price
                </th>
                <th>
                    Date Added
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Title
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemPrice)
                    </td>
                    <td>
                        @item.DateAdded.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Book.ISBN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Book.Title)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditInventoryItem", new { id = item.ItemID }) |
                        @Html.ActionLink("Details", "InventoryItemDetails", new { id = item.ItemID }) |
                        @Html.ActionLink("Delete", "DeleteInventoryItem", new { id = item.ItemID })
                    </td>
                </tr>
            }

        </table>
    </body>
