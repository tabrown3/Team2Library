@model Team2LibraryProject_01.Models.Reservation

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Reservation</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ReservationID)

        <div class="form-group">
            @Html.LabelFor(model => model.CardNo, "CardNo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CardNo", String.Empty)
                @Html.ValidationMessageFor(model => model.CardNo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ISBN, "ISBN", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ISBN", String.Empty)
                @Html.ValidationMessageFor(model => model.ISBN)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReserveDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReserveDate)
                @Html.ValidationMessageFor(model => model.ReserveDate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
