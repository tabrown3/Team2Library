@model Team2LibraryProject_01.Models.Reservation

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Book.Title)
        </dd>

        <dt>
            Author:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Book.Author_FName) @Html.DisplayFor(model => model.Book.Author_LName)
        </dd>

        <dt>
            Reserve Date:
        </dt>

        <dd>
            @Model.ReserveDate.ToShortDateString()
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Lounge", "Index", "Manage")
        </div>
    }
</div>
