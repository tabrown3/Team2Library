@model IEnumerable<Team2LibraryProject_01.Models.Book>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book Index</title>
</head>
<body>

    <h2>Book Index</h2>
    <hr />

    <p>
        @Html.ActionLink("Create New Book Entry", "AddBook") |
        @Html.ActionLink("Return to Admin Section", "Admin", "Home")
    </p>


    <table class="table">
        <tr>
            <th>
                ISBN
            </th>
            <th>
                Author First Name
            </th>
            <th>
                Author Last Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                Number of Pages
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelf)
            </th>
            <th>
                Genre
            </th>
            <th>
                Language
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author_FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author_LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfPages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre1.Genre1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language1.Language1)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditBook", new { id=item.ISBN }) |
                @Html.ActionLink("Details", "Details", new { id=item.ISBN }) |
                @Html.ActionLink("Delete", "DeleteBook", new { id=item.ISBN })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
