@model IEnumerable<Team2LibraryProject_01.Models.Book>

@{
    ViewBag.Title = "Book Search";
}


<body>
    <div class="jumbotron">
        <div class="container">
            <h1>Search</h1>
            <p class="lead">Find your faves. No frills.</p>
        </div>
    </div>

        @using (Html.BeginForm())
        {
            <p>
                <h4>Search Title: @Html.TextBox("SearchString")</h4>
            </p>
            <p>
                <h4>Search Genre: @Html.DropDownList("bookGenre", "All")</h4>
            </p>
            <p>
                <h4><input type="submit" value="Search" /></h4>
            </p>
        }

    <br />
     <table class="table">
         <tr>
             <th>
                 @Html.DisplayNameFor(model => model.Title)
             </th>
             <th>
                 Author
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.Publisher)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.Year)
             </th>
             <th></th>
         </tr>

         @foreach (var item in Model)
         {
             string input = item.Title;
             string output = item.ISBN;
             <tr>
                 <td>
                     <a href="/Books/BookDetails/@output">@Html.DisplayFor(modelItem => item.Title)</a>
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Author_LName), @Html.DisplayFor(modelItem => item.Author_FName)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Publisher)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Year)
                 </td>
             </tr>
         }

     </table>
</body>