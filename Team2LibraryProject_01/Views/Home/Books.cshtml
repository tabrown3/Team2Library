@model IEnumerable<Team2LibraryProject_01.Models.Book>

@{
    ViewBag.Title = "Books";
}

<body>
    <div class="jumbotron">
        <div class="container">
            <h1>Books</h1>
            <p class="lead">No, we do not stock 50 Shades of Grey.</p>
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Author
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            string input = item.Title;
            string output = item.ISBN;
            <tr>
                <td>
                    <a href="/Books/BookDetails/@output">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author_LName), @Html.DisplayFor(modelItem => item.Author_FName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
            </tr>
        }

    </table>
</body>
