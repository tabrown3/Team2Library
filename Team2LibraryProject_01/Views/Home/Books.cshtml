@model IEnumerable<Team2LibraryProject_01.Models.Book>

@{
    ViewBag.Title = "Books";
}

<body>
    <div class="jumbotron">
        <div class="container">
            <h1>Books</h1>
            <p class="lead">Choose from our growing selection of books.</p>
        </div>
    </div>

        @foreach (var item in Model)
        {
            string input = item.Title;
            string output = item.ISBN;
            string thumbOut = item.ISBN + ".png";
            <div class="col-lg-3 col-sm-4 col-xs-6" align="center">
                <a href="/Books/BookDetails/@output"><img src="~/Content/Images/Thumbs/@thumbOut" align="middle"></a>
                <br />
                @Html.DisplayFor(modelItem => item.Title)
                <br />
                <br />
            </div>
        }
</body>
