@model IEnumerable<Team2Library_01.Models.DVD>

@{
    ViewBag.Title = "DVDs";
}

<div class="jumbotron">
    <h1>DVDs</h1>
    <p class="lead">Sorry, they're not Blu-Rays.</p>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Director
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Studio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) 
{
    string input = item.Title;
    string output = input.Replace(" ", "").Replace("-", "").Replace(":", "").Replace(",", "").Replace("(", "").Replace(")", "");
    
    <tr>
        <td>
            <a href="/DVDs/@output">@Html.DisplayFor(modelItem => item.Title)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Director_LName), @Html.DisplayFor(modelItem => item.Director_FName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Studio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
    </tr>
}

</table>
